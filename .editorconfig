root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true

[*.txt]
indent_style = space
indent_size = 2

[*.{diff,md}]
trim_trailing_whitespace = false

